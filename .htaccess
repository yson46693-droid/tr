# Apache Configuration for InfinityFree
RewriteEngine On

# إعادة توجيه HTTP إلى HTTPS - إجبار استخدام HTTPS
# تحسين للتعامل مع الخوادم خلف البروكسي (مثل InfinityFree)
# فقط أعد التوجيه إذا كنا متأكدين 100% أننا على HTTP وليس HTTPS
# التحقق من جميع المؤشرات قبل إعادة التوجيه لمنع الحلقة
# ملاحظة: إذا استمرت مشكلة "ERR_TOO_MANY_REDIRECTS"، قم بتعطيل هذا القسم
# عن طريق إضافة # في بداية كل سطر من السطور التالية
RewriteCond %{HTTPS} off
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteCond %{HTTP:X-Forwarded-SSL} !on  
RewriteCond %{SERVER_PORT} !^443$
# منع إعادة التوجيه إذا كان الطلب لملفات ثابتة أو API
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json|webp)$
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# إعادة توجيه manifest.json إلى manifest.php لضمان معالجة BOM
RewriteCond %{REQUEST_URI} manifest\.json$ [NC]
RewriteRule ^(.*)manifest\.json$ $1manifest.php [L]

# استثناء manifest.php و service-worker.js من إعادة التوجيه
RewriteCond %{REQUEST_URI} \.(json|js)$ [OR]
RewriteCond %{REQUEST_URI} manifest\.php [OR]
RewriteCond %{REQUEST_URI} service-worker\.js
RewriteRule ^ - [L]

# استثناء مجلد API من إعادة التوجيه (ديناميكي - يعمل مع أي مسار)
RewriteCond %{REQUEST_URI} ^/api/ [OR]
RewriteCond %{REQUEST_URI} ^/[^/]+/api/
RewriteRule ^ - [L]

# استثناء الملفات الثابتة (CSS, JS, Images, etc.) من إعادة التوجيه
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json|webp)$ [OR]
RewriteCond %{REQUEST_URI} ^/assets/ [OR]
RewriteCond %{REQUEST_URI} ^/[^/]+/assets/ [OR]
RewriteCond %{REQUEST_URI} ^/[^/]+/assets/icons/ [OR]
RewriteCond %{REQUEST_URI} ^/assets/icons/
RewriteRule ^ - [L]

# استثناء ملفات PHP المهمة من إعادة التوجيه
RewriteCond %{REQUEST_URI} logout\.php$ [OR]
RewriteCond %{REQUEST_URI} index\.php$ [OR]
RewriteCond %{REQUEST_URI} ^/dashboard/ [OR]
RewriteCond %{REQUEST_URI} ^/[^/]+/dashboard/
RewriteRule ^ - [L]

# منع إعادة التوجيه للملفات الموجودة فعلياً
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirect to index.php if file doesn't exist (but not for dashboard or API)
RewriteCond %{REQUEST_URI} !^/dashboard/ [NC]
RewriteCond %{REQUEST_URI} !^/[^/]+/dashboard/ [NC]
RewriteCond %{REQUEST_URI} !^/api/ [NC]
RewriteCond %{REQUEST_URI} !^/[^/]+/api/ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content-Security-Policy محسّن
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://code.jquery.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' data: https://cdn.jsdelivr.net https://fonts.gstatic.com https://fonts.googleapis.com; connect-src 'self' https://cdn.jsdelivr.net https://code.jquery.com https://api.qrserver.com https://errors.infinityfree.net https://fonts.googleapis.com https://fonts.gstatic.com; frame-src 'self' https://www.google.com https://maps.google.com; frame-ancestors 'self';"
    
    # Permissions-Policy محسّن - السماح بالصلاحيات المطلوبة
    # ملاحظة: notifications تم إزالته من Feature-Policy لأنه غير مدعوم في Feature-Policy
    # لكن يمكن إبقاؤه في Permissions-Policy إذا كان مدعوماً في المتصفح
    Header set Permissions-Policy "geolocation=(self), camera=(self), microphone=(self), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=(), interest-cohort=()"
    
    # إخفاء معلومات الخادم
    Header unset Server
    Header unset X-Powered-By
    
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
    
    # منع فهرسة الملفات الحساسة
    <FilesMatch "\.(php|sql|log|ini|conf)$">
        Header set X-Robots-Tag "noindex, nofollow"
    </FilesMatch>
</IfModule>

# حماية ملف config.php من الوصول المباشر
<Files "config.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>

# حماية ملفات قاعدة البيانات
<FilesMatch "\.(sql|sql\.gz)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# حماية مجلد database من الوصول المباشر
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^database/ - [F,L]
</IfModule>

# MIME Types Support
<IfModule mod_mime.c>
    AddType application/manifest+json .json
    AddType application/manifest+json manifest.php
    AddType application/javascript .js
    AddType text/cache-manifest .appcache
    AddType text/css .css
    AddType image/svg+xml .svg
</IfModule>

# PHP Settings
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value default_socket_timeout 30
    php_value memory_limit 128M
</IfModule>

# PHP Settings for PHP 8.x
<IfModule mod_php8.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value default_socket_timeout 30
    php_value memory_limit 128M
</IfModule>

# Apache Timeout Settings - منع توقف الخادم
<IfModule mod_timeout.c>
    Timeout 60
</IfModule>

# Keep-Alive Settings - تحسين الاتصال
<IfModule mod_headers.c>
    # إعدادات Keep-Alive
    Header set Connection "keep-alive"
</IfModule>

# Cache Control for Static Assets - محسّن لتسريع التحميل
<IfModule mod_expires.c>
    ExpiresActive On
    # الأيقونات والصور - كاش طويل الأمد (سنة واحدة)
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    # ملفات CSS - كاش متوسط (6 أشهر)
    ExpiresByType text/css "access plus 6 months"
    # ملفات JavaScript - كاش متوسط (6 أشهر)
    ExpiresByType application/javascript "access plus 6 months"
    ExpiresByType text/javascript "access plus 6 months"
    # Manifest - كاش قصير (أسبوع واحد)
    ExpiresByType application/manifest+json "access plus 1 week"
    # الخطوط - كاش طويل الأمد (سنة واحدة)
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Cache-Control Headers - إضافة headers إضافية للكاش
<IfModule mod_headers.c>
    # الأيقونات - كاش عام لمدة سنة
    <FilesMatch "\.(png|jpg|jpeg|gif|svg|ico|webp)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # ملفات CSS - كاش عام لمدة 6 أشهر
    <FilesMatch "\.css$">
        Header set Cache-Control "public, max-age=15552000"
    </FilesMatch>
    
    # ملفات JavaScript - كاش عام لمدة 6 أشهر
    <FilesMatch "\.js$">
        Header set Cache-Control "public, max-age=15552000"
    </FilesMatch>
    
    # الخطوط - كاش عام لمدة سنة
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Manifest - كاش عام لمدة أسبوع
    <FilesMatch "manifest\.(json|php)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
</IfModule>

# Gzip Compression - محسّن للموبايل
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    
    # Remove browser bugs (only needed for really old browsers)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# Protect sensitive files but allow application log access
<FilesMatch "^(?!php-errors\.log$).*\.(sql|log|ini|conf)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Allow direct access to the PHP error log for debugging
<Files "php-errors.log">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Allow from all
    </IfModule>
</Files>
